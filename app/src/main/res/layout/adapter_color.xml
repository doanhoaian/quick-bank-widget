<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/neutral_light_medium"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/neutral_dark_lightest"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/image_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:padding="5dp"
            android:src="@drawable/svg_fonts_block"
            app:tint="@color/neutral_dark_lightest" />

        <ImageView
            android:id="@+id/image_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:padding="10dp"
            android:src="@drawable/svg_solar_check_circle" />
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>